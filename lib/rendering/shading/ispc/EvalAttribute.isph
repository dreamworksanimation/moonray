           const varying float normalDial,
                 varying float            * uniform  lengthN)
{
    return evalNormal((const SceneObject * uniform) sceneObject,
                      tls,
                      state,
                      normalMap,
                      sampleNormalFn,
                      normalDial,
                      lengthN);
}
